<body class="toggle-sidebar">

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a href="@Url.Action("Contact", "Admin")" class="logo d-flex align-items-center">
                <img src="~/Admin/assets/img/logo.png" alt="">
                <span class="d-none d-lg-block">Kaan Latinler</span>
            </a>
        </div><!-- End Logo -->

    </header><!-- End Header -->
    <main id="main" class="main">

        <section class="section dashboard">

            <!-- Add Project Card -->
            <div class="row">
                <div class="col-sm-4">
                    <a href="#" data-bs-toggle="modal" data-bs-target="#AddProjectModal">
                        <div class="card text-center">
                            <div class="card-body p-0">
                                <h3 class="card-title">Proje Ekle</h3>
                            </div>
                        </div>
                    </a>
                    <!-- Modal -->
                    <div class="modal fade" id="AddProjectModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="AddProjectModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <form enctype="multipart/form-data" action="@Url.Action("AddProject", "Admin", new { area = "Admin" })" method="post">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="AddProjectModalLabel">Proje Ekle</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row mb-3">
                                            <label for="inputText" class="col-sm-2 col-form-label">Proje Adı</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="NewProject.ProjectName">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="inputPassword" class="col-sm-2 col-form-label">Proje Açıklaması</label>
                                            <div class="col-sm-10">
                                                <textarea class="form-control" style="height: 100px" name="NewProject.ProjectDesc"></textarea>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="inputPassword" class="col-sm-2 col-form-label">Proje Linki</label>
                                            <div class="col-sm-10">
                                                <textarea class="form-control" name="NewProject.ProjectUrl"></textarea>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="inputText" class="col-sm-2 col-form-label">Proje Müşterisi</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="NewProject.ProjectClient">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="inputDate" class="col-sm-2 col-form-label">Proje Tarihi</label>
                                            <div class="col-sm-10">
                                                <input type="date" class="form-control" name="NewProject.ProjectDate">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="inputNumber" class="col-sm-2 col-form-label">Resimler</label>
                                            <div class="col-sm-10">
                                                <input class="form-control" type="file" id="formFile" name="pics">
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">Proje Kategorisi</label>
                                            <div class="col-sm-10">
                                                @Html.DropDownListFor(model => model.NewProject.ProjectCatId, Model.Categories, "Select a category", new { @class = "form-select", @name = "Project.ProjectCatId" })
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">Proje Dili</label>
                                            <div class="col-sm-10">
                                                @Html.DropDownListFor(model => model.NewProject.ProjectLangId, Model.Languages, "Select a language", new { @class = "form-select", @name = "Project.ProjectLangId" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <a href="#" data-bs-toggle="modal" data-bs-target="#AddCategoryModal">
                        <div class="card text-center">
                            <div class="card-body p-0">
                                <h3 class="card-title">Kategori Ekle</h3>
                            </div>
                        </div>
                    </a>
                    <!-- Modal -->
                    <div class="modal fade" id="AddCategoryModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="AddCategoryModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <form action="@Url.Action("AddCategory", "Admin", new { area = "Admin" })" method="post">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="AddCategoryModalLabel">Kategori Ekle</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row mb-3">
                                            <label for="inputText" class="col-sm-2 col-form-label">Kategori Adı</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="Category.CategoryName">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <a href="#" data-bs-toggle="modal" data-bs-target="#AddLangModal">
                        <div class="card text-center">
                            <div class="card-body p-0">
                                <h3 class="card-title">Dil Ekle</h3>
                            </div>
                        </div>
                    </a>
                    <!-- Modal -->
                    <div class="modal fade" id="AddLangModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="AddLangModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <form action="@Url.Action("AddLang", "Admin", new { area = "Admin" })" method="post">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="AddLangModalLabel">Dil Ekle</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row mb-3">
                                            <label for="inputText" class="col-sm-2 col-form-label">Dil Adı</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="Language.LangName">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Projects From Database -->
            <div class="row">
                @foreach (var item in Model.Projects)
                {
                    <div class="col-md-3">
                        <form action="@Url.Action("DeleteProject", "Admin", new { area = "Admin" , projectID = item.Project.ProjectId})" method="post">
                            <div class="card">
                                @foreach (var img in item.Images.Where(i=>i.ProjectId == item.Project.ProjectId))
                                {
                                <img src="@img.ImgPath" height="250px" alt="" class="card-img object-fit-contain">                                
                                }
                                <div class="card-body">
                                    <h3 class="card-title">
                                        @item.Project.ProjectName
                                    </h3>
                                    <p class="card-text">@item.Project.ProjectDesc</p>
                                    <h4 class="card-title">@item.Project.ProjectClient</h4>
                                    <p class="card-text">@item.Project.ProjectDate.ToString("dd.MM.yyyy")</p>
                                    <p class="card-text">@item.Language.LangName</p>
                                    <p class="card-text">@item.Category.CategoryName</p>
                                </div>
                                <div class="card-footer justify-content-between d-flex">
                                        <a href="@item.Project.ProjectUrl" target="_blank" class="card-link">@item.Project.ProjectName</a>
                                        <button type="submit" class="btn btn-outline-danger">Sil</button>
                                </div>
                            </div>
                        </form>
                    </div>
                }
            </div>

        </section>

    </main><!-- End #main -->
